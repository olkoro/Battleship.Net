@page
@model WebApp.Pages.Place

@{
    ViewData["Title"] = "Game Setup";
}

<!DOCTYPE html>

<html>
<head>
    <title>Placing ships</title>
</head>
<body>
<div>
    <div class="content">
        <table class="border">
            <tbody>
            @for (int i = 0; i < Model.GameBoard.Board.Count; i++)
            {
                <tr class="border">
                    @for (var j = 0; j < Model.GameBoard.Board[i].Count; j++)
                    {
                        <td class="border">
                            @WebUI.ConvertToSymbols(Model.GameBoard.Board[i][j].ToString())
                        </td>
                    }
                </tr>
            }
            </tbody>
        </table>
    </div>
    <br/>
    <a href="Game">Play</a>
</div>
</body>
</html>